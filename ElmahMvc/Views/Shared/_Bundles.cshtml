@{
    var bundles = BundleTable.Bundles;

    bundles.UseCdn = true;

    bundles.Add(new ScriptBundle("~/bundles/jquery", "//ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.1.min.js").Include("~/Scripts/jquery-3.*"));

    bundles.Add(new ScriptBundle("~/bundles/jquery1", "//ajax.aspnetcdn.com/ajax/jQuery/jquery-1.12.4.min.js").Include("~/Scripts/jquery-1.*"));

    bundles.Add(new StyleBundle("~/Content/site").Include("~/Content/site.css", "~/Content/sticky-footer-navbar.css"));

    bundles.Add(new StyleBundle("~/Content/bootstrap", "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css")
        .Include("~/Content/bootstrap.css"));

    bundles.Add(new StyleBundle("~/Content/bootstrap-theme", "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap-theme.min.css")
        .Include("~/Content/bootstrap-theme.css"));
}